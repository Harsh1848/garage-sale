@model LoginModel

<div class="container">
    <h2>Login</h2>
    <label style="color: gray;">Welcome to Garage Sale Locator!!...</label>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    <form asp-action="Login" method="post" style="margin-top: 30px;">
        <div class="form-group">
            <label asp-for="Email" style="font-weight: bold; color: palevioletred;">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Enter email here." style="color: gray;" />
        </div>

        <div class="form-group">

            <label asp-for="Password" style="font-weight: bold; color: palevioletred; margin-top: 10px">Password</label>

            <input asp-for="Password" class="form-control" placeholder="Enter password here." style="color: gray;" />
        </div>

        <button type="submit" class="btn btn-block" style="margin-top: 40px; color: white; background-color: palevioletred; font-weight: bold; font-size: 20px;">Login</button>

        <div style="margin-top: 10px; display: flex; align-items: center; justify-content: center;">
            <label style="color: gray; font-weight: bold; margin-right: 5px;">New User?</label>
            <a href="@Url.Action("Register", "Account")" style="color: palevioletred; font-weight: bold;">Register</a>
        </div>
    </form>
</div>
