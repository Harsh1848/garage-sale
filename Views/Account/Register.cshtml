@model GSL.Models.UserRegistrationModel

<div class="container">
    <h2>Register</h2>
    <label style="color: gray;">Join the Garage Sale Locator Community!</label>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    <form asp-action="Register" method="post" style="margin-top: 30px;">
        <div class="form-group">
            <label asp-for="Name" style="font-weight: bold; color: palevioletred;">Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter your name" style="color: gray;" />
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber" style="font-weight: bold; color: palevioletred; margin-top: 10px">Phone Number</label>
            
            <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" style="color: gray;" />
        </div>

        <div class="form-group">
            <label asp-for="Email" style="font-weight: bold; color: palevioletred; margin-top: 10px">Email</label>
            
            <input asp-for="Email" type="email" class="form-control" placeholder="Enter email" style="color: gray;" />
        </div>

        <div class="form-group">
            <label asp-for="Address" style="font-weight: bold; color: palevioletred; margin-top: 10px">Address</label>
            
            <input asp-for="Address" class="form-control" placeholder="Enter address" style="color: gray;" />
        </div>

        <div class="form-group">
            <label asp-for="UserType" style="font-weight: bold; color: palevioletred; margin-top: 10px">User Type</label>
            
            <select asp-for="UserType" class="form-control">
                <option value="Customer">Customer</option>
                <option value="SalesProvider">Sales Provider</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="Password" style="font-weight: bold; color: palevioletred; margin-top: 10px">Password</label>
            
            <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" style="color: gray;" />
        </div>

        <button type="submit" class="btn btn-block" style="margin-top: 40px; color: white; background-color: palevioletred; font-weight: bold; font-size: 20px;">Register</button>

        <div style="margin-top: 10px; display: flex; align-items: center; justify-content: center;">
            <label style="color: gray; font-weight: bold; margin-right: 5px;">Already a member?</label>
            <a href="@Url.Action("Login", "Account")" style="color: palevioletred; font-weight: bold;">Login</a>
        </div>
    </form>
</div>
